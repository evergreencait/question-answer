{{#if addNewQuestion}}
<h1>New Question for the forum</h1>
 <div>
   <form>
     <div class="form-group">
       <label for="inquiry">Question</label>
       {{input value=inquiry id="inquiry"}}
     </div>

     <div class="form-group">
       <label for="author">Author</label>
       {{input value=author id="author"}}
     </div>

     <div class="form-group">
       <label for="notes">Notes</label>
       {{input value=notes id="notes"}}
     </div>

     <div class="form-group">
       <label for="image">Image URL</label>
       {{input value=image id="image"}}
     </div>

     <button {{action 'saveQuestion'}}>Save</button>
   </form>
 </div>
{{else}}
  <button class="btn" {{action 'questionFormShow'}}>New Question</button>
{{/if}}
